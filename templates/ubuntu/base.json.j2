{
  "builders": [
    {
      "boot_command": [
        {%- for command in boot_command %}
          "{$ command $}"{%- if not loop.last -%},{%- endif -%}
        {%- endfor %}
      ],
      "boot_wait": "{$ boot_wait | default('10s') $}",
      "cd_files": [
        "files/*"
      ],
      "cd_label": "files",
      "cpus": {$ cpus | default(1) $},
      "disk_size": {$ disk_size | default(40000) $},
      "export_opts": [
        "--ovf10",
        "--manifest",
        "--options", "manifest,nomacs",
        "--vsys", "0",
        "--description", "{{ build_name }}",
        "--product", "{{ build_name }}",
        "--version", "{{ user `build_timestamp` }}",
        "--vmname", "{{ build_name }}"
      ],
      "format": "ova",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",
      "headless": {$ 'true' if headless else 'false' $},
      "http_directory": "{$ paths.build_dir $}",
      "iso_checksum": "{$ iso_checksum $}",
      "iso_url": "{$ iso_url $}",
      "keep_registered": true,
      "memory": {$ build_memory $},
      "name": "{{ user `name` }}",
      "output_directory": "output/{{ build_name }}-{{ user `build_timestamp` }}",
      "output_filename": "{{ build_name }}",
      "shutdown_command": "echo '{$ pass $}' | sudo -S shutdown -P now",
      "ssh_handshake_attempts": {$ ssh_handshake_attempts | default(10) $},
      "ssh_password": "{$ pass $}",
      "ssh_timeout": "10000s",
      "ssh_username": "{$ user $}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        {% if graphicscontroller -%}
          ["modifyvm", "{{ .Name }}", "--graphicscontroller", "{$ graphicscontroller $}"],
        {% endif -%}
        ["modifyvm", "{{ .Name }}", "--vram", {$ vram | default(16) $}],
        ["modifyvm", "{{ .Name }}", "--pae", "off"]
      ],
      "vboxmanage_post": [
        ["modifyvm", "{{ .Name }}", "--memory", {$ memory $}],
        ["modifyvm", "{{ .Name }}", "--vrde", "off"],
        ["storageattach", "{{ .Name }}", "--storagectl", "IDE Controller", "--port", 0, "--device", 1, "--type", "dvddrive", "--medium", "emptydrive"],
        ["snapshot", "{{ .Name }}", "take", "Base"]
      ],
      "vm_name": "packer-{$ args.template $}-{$ args.release $}-{$ variant $}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        {% if keep_x -%}
          "KEEP_X=yes",
        {% endif -%}
        "HOME_DIR=/home/{$ user $}"
      ],
      "execute_command": "echo '{$ pass $}' | {{ .Vars }} sudo -S -E sh -eux '{{ .Path }}'",
      "expect_disconnect": true,
      "scripts": [
        {%- for script in scripts_before %}
          "{$ paths.scripts_dir $}/{$ script $}.sh",
        {%- endfor %}
        {%- for script in scripts %}
          "{$ paths.scripts_dir $}/{$ script $}.sh",
        {%- endfor %}
        {%- for script in scripts_after %}
          "{$ paths.scripts_dir $}/{$ script $}.sh"{%- if not loop.last -%},{%- endif -%}
        {%- endfor %}
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "build_timestamp": "{{ isotime \"2006-01-02-15-04-05\" }}"
  }
}
